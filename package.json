{
  "name": "bookify",
  "private": true,
  "version": "1.6.4",
  "description": "Bookify - Modern event booking platform built with React, TypeScript, and Supabase",
  "type": "module",
  "scripts": {
    "dev": "npm run test:pre-dev && vite --mode development",
    "dev:debug": "npm run test:pre-dev && cross-env DEBUG=true vite --mode development",
    "dev:debug-quiet": "cross-env DEBUG=true vite --mode development",
    "build": "tsc -b && vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:pre-dev": "vitest run --reporter=verbose --bail=1",
    "check": "pwsh ./scripts/health-check.ps1",
    "ci": "pwsh ./scripts/ci.ps1",
    "setup": "pwsh ./scripts/dev-setup.ps1",
    "clean": "pwsh ./scripts/clean.ps1",
    "deploy": "pwsh ./scripts/deploy.ps1",
    "db": "pwsh ./scripts/database-tools.ps1",
    "perf": "pwsh ./scripts/performance.ps1",
    "workflows": "pwsh ./scripts/run-all-workflows-locally.ps1",
    "workflows:quick": "pwsh ./scripts/run-all-workflows-locally.ps1 -QuickRun",
    "workflows:bash": "./scripts/run-all-workflows-locally.sh",
    "type-check": "tsc --noEmit",
    "vercel-build": "npm run build"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.56.1",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/testing-library__react": "^10.2.0",
    "@types/testing-library__user-event": "^4.2.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "chrome-launcher": "^1.2.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "path-to-regexp": "^8.2.0",
    "supabase": "^2.39.2",
    "tailwindcss": "^4.1.12",
    "tmp": "^0.2.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vercel": "^46.1.1",
    "vite": "^7.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
