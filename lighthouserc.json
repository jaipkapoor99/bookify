{
  "ci": {
    "collect": {
      "url": ["http://localhost:4173"],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage --disable-gpu --disable-web-security --disable-features=VizDisplayCompositor,AudioServiceOutOfProcess --disable-background-timer-throttling --disable-renderer-backgrounding --disable-backgrounding-occluded-windows --disable-field-trial-config --no-first-run",
        "maxWaitForLoad": 45000,
        "maxWaitForFcp": 15000,
        "pauseAfterFcpMs": 500,
        "pauseAfterLoadMs": 500,
        "networkQuietThresholdMs": 500,
        "cpuQuietThresholdMs": 500,
        "skipAudits": ["uses-http2", "redirects-http"]
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.6}],
        "categories:accessibility": ["error", {"minScore": 0.85}],
        "categories:best-practices": ["warn", {"minScore": 0.75}],
        "categories:seo": ["error", {"minScore": 0.85}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}